@model IEnumerable<Assignment_NET105_Nhom3_Shared.ViewModels.ProductDetailsViewModels_Show>

<div class="table-wrapper" style="max-height: 500px; overflow-y: scroll;">
	<div style="margin-top=30px">
		<h2>Quản lý chi tiết sản phẩm</h2>
	</div>

	<div style="margin: 20px 0px 20px 0px">
		<a href="@Url.Action("AddProductDetail","Management",new{ })" style="text-decoration:none; color: white">
			<button type="button" class="btn btn-success"><i class="fa-sharp fa-solid fa-layer-plus"></i>  Add new</button>
		</a>

		<table class="table tablePR" style="font-size: 10pt; text-align: center; overflow-y: scroll; max-height: 1000px;">
			<thead>
				<tr>
					<th scope="col">STT</th>
					<th scope="col">Ảnh</th>
					<th scope="col">Tên sản phẩm</th>
					<th scope="col">Giá bán</th>
					<th scope="col">Màu sắc</th>
					<th scope="col">Size</th>
					<th scope="col">Số lượng</th>
					<th scope="col">Trạng thái</th>
					<th scope="col">Chức năng</th>
				</tr>
			</thead>
			<tbody style="font-size: 10pt; text-align: center;line-height: 100px;">
				@{
					int count = 1;
				}
				@foreach (var a in Model)
				{
					<tr>
						<th>@(count++)</th>
						<th>
							<a href="@Url.Action("Details","Management",new{Id=a.Id})" style="text-decoration:none; color: white">
								<img src="/images/@a.Image" alt="" style="width:100px;height: 100px;">
							</a>
						</th>

						@*                        @if ((a.Products.Price * a.AvaiableQuatity) > 1000000)
					{
					<th style="color:yellow">@a.Products.Name</th>
					}
					else
					{
					<th>@a.Products.Name</th>
					}*@
						<th>@a.ProductName</th>
						<th>@a.Price.ToString("#,##0")đ</th>
						<th>@a.ColorName</th>
						<th>@a.SizeName</th>
						<th>@a.AvaiableQuatity</th>
						<th>@(a.Status == 1 ?"Đang kinh doanh" : "Ngừng kinh doanh")</th>
						<th>
							<a href="@Url.Action("DeleteProductDetails","Management",new{Id=a.Id})" style="text-decoration:none; color: white">
								<button type="button" class="btn btn-danger" style="font-size: 10pt;float: right;margin-top: 40px; ">
									<i class="fa-regular fa-trash-can"></i>
								</button>
							</a>
							<a href="@Url.Action("UpdateProductDetail","Management",new{Id=a.Id})" style="text-decoration:none; color: white">
								<button type="button" class="btn btn-warning" style="font-size: 10pt;float: right; margin: 40px 5px;">
									<i class="fa-solid fa-pen-to-square"></i>
								</button>
							</a>

						</th>

					</tr>


				}

			</tbody>
		</table>
	</div>
